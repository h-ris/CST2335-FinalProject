<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/ccy_list_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="FromUnit"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ccy_list_fromAmt" />

    <TextView
        android:id="@+id/ccy_list_fromAmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="Amount"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/ccy_list_exchange_icon"
        app:layout_constraintTop_toTopOf="@+id/ccy_list_exchange_icon" />

    <TextView
        android:id="@+id/ccy_list_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="ToUnit"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@+id/ccy_list_exchange_icon"
        app:layout_constraintTop_toTopOf="@+id/ccy_list_exchange_icon" />

    <TextView
        android:id="@+id/ccy_list_toAmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="ToAmt"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ccy_list_to" />

    <ImageView
        android:id="@+id/ccy_list_exchange_icon"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ccy_list_fromAmt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:text="Time goes here"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ccy_list_toAmt" />

</androidx.constraintlayout.widget.ConstraintLayout>